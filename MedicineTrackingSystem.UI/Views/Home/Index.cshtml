@{
    ViewData["Title"] = "Home Page";
}
<div>
    <section>
        <div class="container mt-4">
            <div class="header_wrap">
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <h4>Medicine Details</h4>
                        </div>
                        <div class="col">
                            <div class="tb_search">
                                <input type="text" id="search_input_all" onkeyup="FilterkeyWord_all_table()" placeholder="Search.."
                                       class="form-control">
                            </div>
                        </div>
                    </div>

                </div>
                <div class="alert alert-warning mt-2" role="alert">
                    No data found
                </div>
                <ul class="nav justify-content-end">
                    <li class="nav-item">
                        <!--<a class="nav-link active" onclick="pageRedirect()" href="#"><i class="fas fa-plus-circle"></i></a>-->
                        <a class="nav-link active" id="btnAdd" onclick="pageRedirect()" href="#"><i class="fas fa-plus-circle"></i></a>
                    </li>
                </ul>
                <table class="table table-hover table-dark" id="tblMedicineDetails">
                    <thead>
                        <tr>
                            <th>Full Name</th>
                            <th>Brand</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Expiry Date</th>
                            <th>Notes</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="tbodyMedicines">

                    <tbody>
                </table>


                <div class='pagination-container'>
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <nav>
                                    <ul class="pagination">
                                        <nav aria-label="...">
                                            <ul class="pagination">
                                                <li class="page-item disabled">
                                                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                                                </li>
                                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                                <li class="page-item">
                                                    <a class="page-link" href="#">2</a>
                                                </li>
                                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                                <li class="page-item">
                                                    <a class="page-link" href="#">Next</a>
                                                </li>
                                            </ul>
                                        </nav>
                                    </ul>

                                </nav>
                            </div>
                            <div class="col">
                                <div class="rows_count">Showing 11 to 20 of 91 entries</div>
                            </div>
                            <div class="col">
                                <div class="num_rows">

                                    <div class="form-group">
                                        <!--		Show Numbers Of Rows 		-->
                                        <select class="form-control" name="state" id="maxRows">
                                            <option value="10">10</option>
                                            <option value="15">15</option>
                                            <option value="20">20</option>
                                            <option value="50">50</option>
                                            <option value="70">70</option>
                                            <option value="100">100</option>
                                            <option value="5000">Show ALL Rows</option>
                                        </select>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>


            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
            crossorigin="anonymous"></script>

    <script>
        var url = "https://localhost:44390/api/Medicine";
        $(document).ready(function () {
            $.ajax({
                url: url,
                type: 'GET',
                dataType: 'json',
                crossDomain: true,
                success: function (medicines) {
                    bindMedicinesToGrid(medicines);
                },
                error: function (request, message, error) {
                    handleException(request, message, error);
                }
            });
        });


        function bindMedicinesToGrid(medicines) {
            if ($("#tblMedicineDetails tbody").length == 0) {
                $("#tblMedicineDetails").append("<tbody></tbody>");
            }
            var htmlText = '';
            for (var i = 0; i < medicines.length; i++) {
                htmlText += medicineBuildTableRow(medicines[i])
            }
            $("#tbodyMedicines").html('');
            $("#tbodyMedicines").html(htmlText);
        }

        function medicineBuildTableRow(medicine) {
            var ret = '';
            if (medicine.quantity < 10) {
                ret += "<tr class='bg_yellow'>";
            }
            else {
                ret += "<tr>";
            }
            ret +=
                "<td>" + medicine.medicineFullName + "</td>" +
                "<td>" + medicine.brand + "</td>" +
                "<td>" + medicine.price + "</td>" +
                "<td>" + medicine.quantity + "</td>" +
                "<td>" + medicine.expiryDate + "</td>" +
                "<td>" + medicine.notes + "</td>" +
                "<td><i class='fas fa-pencil - alt'></i></td>" +
                "</tr>";

            return ret;
        }

        function handleException(request, message, error) {
            var msg = "";
            msg += "Code: " + request.status + "\n";
            msg += "Text: " + request.statusText + "\n";
            if (request.responseJSON != null) {
                msg += "Message" + request.responseJSON.Message + "\n";
            }
            alert(msg);
        }
        function pageRedirect() {
            window.open('AddMedicine.html');
        }
    </script>
</div>

